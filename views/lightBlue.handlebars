                                    <input class="uk-input" name="name" type="text" required>
                            </div>

                            <!-- Contact no -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Contact No</label>
                                    <input class="uk-input" name="contact_no" maxlength="10" type="text" placeholder="07XXXXXXXX" required>
                            </div>

                            <!-- Email -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Email Adress</label>
                                    <a class="uk-form-icon" href="#" uk-icon="icon: pencil"></a>
                                    <input class="uk-input" name="email" type="email" required>
                            </div>

                            <!-- Secret Code for wedding show -->
                            <div class="uk-margin">
                                    <label class="uk-form-label .uk-text-danger" for="form-stacked-text" >Secret Code</label>
                                    <input class="uk-input .uk-text-danger" name="secretcode" type="text" required>

                            </div>

                            <!--Book an Appoinment  -->
                            <div class="uk-margin">
                                    <label class="uk-form-label" for="form-stacked-text">Appoinment Date</label>
